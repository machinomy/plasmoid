{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [ "es2017", "dom" ],
    "sourceMap": true,          // Generate corresponding '.map' file
    "declaration": true,        // Generate corresponding '.d.ts' file
    "strict": true,             // Enable all strict type-checking options
    "noImplicitReturns": true,   // Report error when not all code paths in function return a value
    "types": [
      "@machinomy/types-ethereumjs-units",
      "@machinomy/types-ethereumjs-util",
      "@machinomy/types-web3",
      "@machinomy/types-truffle",
      "@machinomy/types-truffle-contract",
      "@machinomy/types-truffle-deployer",
      "@types/node",
      "@types/jest"
    ]
  },
  "exclude": [
    "node_modules/abstract-leveldown/index.d.ts"
  ],
  "include": [
    "build/wrappers/*.ts",
    "src/globals.d.ts",
    "src/**/*.ts",
    "migrations/**/*.ts",
    "test/**/*.ts",
    "types/**/*.d.ts"
  ]
}
